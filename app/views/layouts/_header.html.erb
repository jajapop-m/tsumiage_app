<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <%= link_to root_path, { class: "my-0 mr-md-auto font-weight-normal text-dark"} do %>
    <%= image_tag "logo.png" , { class: "img-fluid tsumiage"} %>
  <% end %>
  <nav class="my-2 my-md-0 mr-md-3">
    <%= link_to "Home", root_path, { class: "p-2 text-dark" } %>
    <%= link_to "Users", "#", { class: "p-2 text-dark" } %>
    <%= link_to "Posts", "#" , { class: "p-2 text-dark" } %>
    <% if logged_in? %>
      <%= link_to "Log out", logout_path , method: :delete , class: "p-2 text-dark" %>
    <% else %>
      <%= link_to "Log in", login_path , { class: "p-2 text-dark" } %>
    <% end %>
    <%= link_to "Help", help_path , { class: "p-2 text-dark" } %>
  </nav>
  <% if logged_in? %>
    <%= link_to "Profile", user_path(current_user) , { class: "btn btn-outline-primary" } %>
  <% else %>
    <%= link_to "Sing up", signup_path, { class: "btn btn-outline-primary" } %>
  <% end %>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>