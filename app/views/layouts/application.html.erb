<!DOCTYPE html>
<html>
  <head>
    <title>Tsumiage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-1 px-md-4 mb-1 bg-white border-bottom shadow-sm  fixed-top">
      <% if logged_in? %>
        <%= render 'layouts/header_loggedin' %>
      <% else %>
        <%= render 'layouts/header' %>
      <% end %>
    </div>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> text-center">
        <button type="button" class="close" data-dismiss="alert">Ã—</button><%= message %>
        </div>
    <% end %>
    <%= yield %>
  </body>
</html>
