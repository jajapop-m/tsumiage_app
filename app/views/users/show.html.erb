<div class="container">
  <div class="row">
  <aside class="col-md-4">
      <section class="user_info">
        <%= render 'users/user_info' %>
      </section>
      <% if current_user?(@user) %>
        <section class="py-5 text-right">
          <%= render 'posts/post_form' %>
        </section>
      <% end %>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>投稿数(<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>